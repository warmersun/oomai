[env]
CHAINLIT_DATA_LAYER = "none"
DATABASE_URL = ""

run = "chainlit run app_gpt5.py"
entrypoint = "app.py"
modules = ["nodejs-20", "python-3.11"]
disableGuessImports = true

[nix]
channel = "stable-24_05"
packages = ["libxcrypt", "libyaml"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "chainlit run app_gpt5.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80
exposeLocalhost = true

run = "chainlit run app.py"
entrypoint = "app.py"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["libxcrypt", "libyaml"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python batch.py"]
deploymentTarget = "scheduled"

[[ports]]
localPort = 8000
externalPort = 80
exposeLocalhost = true

[workflows]

[[workflows.workflow]]
name = "Batch"
mode = "sequential"
author = 26564713

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python batch.py"

[[workflows.workflow]]
name = "Run GPT5"
mode = "sequential"
author = 26564713

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chainlit run app_gpt5.py"

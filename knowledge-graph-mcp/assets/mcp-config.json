{
    "mcpServers": {
        "knowledge-graph": {
            "command": "uv",
            "args": [
                "run",
                "--directory",
                "/path/to/xaineo4j",
                "python",
                "mcp_server.py"
            ],
            "env": {
                "NEO4J_URI": "neo4j+s://your-db.databases.neo4j.io",
                "NEO4J_USERNAME": "neo4j",
                "NEO4J_PASSWORD": "your-password",
                "OPENAI_API_KEY": "sk-...",
                "GROQ_API_KEY": "gsk_..."
            }
        }
    }
}